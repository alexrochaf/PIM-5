@{
    Page.Title = "The Host - Quartos";
    Layout = "~/_Layout.cshtml";
    Page.Quartos = "active";

    var conexao = WebMatrix.Data.Database.Open("DB");

    var quartos = conexao.Query("select *, Descricao from QUARTO q inner join TipoQuarto t on t.id = q.tipo_id");

    conexao.Close();

}
<div class="raw">
    <a class="btn btn-success" href="~/pages/quartos/novo">Novo</a>
    <br />
    <br />
    <br />
    <div class="row">
        @{
            foreach (var item in quartos)
            {
                if (item.Estatus == 1)
                {

                }
                else
                {
                    <div class="col-md-4">
                        <div class="panel panel-success">
                            <div class="panel-heading"><i class="fa fa-tag" aria-hidden="true"></i> @item.Numero</div>
                            <div class="panel-body">
                                <i class="fa fa-fw fa-star"></i> @item.Descricao
                            </div>
                        </div>
                    </div>
                }
            }
        }
    </div>
</div>
