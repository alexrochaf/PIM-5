@{
    Page.Title = "The Host - Hospedes";
    Layout = "~/_Layout.cshtml";
    Page.Hospede = "active";

    var conexao = WebMatrix.Data.Database.Open("DB");

    var hospedes = conexao.Query("select * from Hospede");

    conexao.Close();

}
<div class="row">
    <br /><br />
    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th>Nome</th>
                <th>CPF</th>
                <th>Celular</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var h in hospedes)
            {
                <tr>
                    <td>@h.NOME</td>
                    <td>@h.CPF</td>
                    <td>@h.Celular</td>
                    <td><a class="btn btn-success" href="~/pages/reservas/nova?id=@h.Id" role="button" data-toggle="tooltip" data-placement="top" title="Nova Hospedagem"><i class="fa fa-tag" aria-hidden="true"></i></a> | <a class="btn btn-info" href="~/pages/hospedes/detalhes?id=@h.Id" role="button" data-toggle="tooltip" data-placement="top" title="Detalhes"><span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span></a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
