@{
    Page.Title = "The Host - Hospedes";
    Layout = "../../_Layout.cshtml";
    Page.Hospede = "active";

    var conexao = WebMatrix.Data.Database.Open("DB");

    var hospedes = conexao.Query("select * from Hospede");

    conexao.Close();

}
    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th>Nome</th>
                <th>CPF</th>
                <th>Celular</th>
                <th>Telefone</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var h in hospedes)
            {
                <tr>
                    <td>@h.NOME</td>
                    <td>@h.CPF</td>
                    <td>@h.Celular</td>
                    <td>@h.TELEFONE</td>
                </tr>
            }
        </tbody>
    </table>