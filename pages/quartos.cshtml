@{
    Page.Title = "The Host - Quartos";
    Layout = "../_Layout.cshtml";

}

<div>
    <h1>Cadastro de Quartos</h1>
</div>
<form data-toggle="validator" role="form" method="post" action="" enctype="multipart/form-data">
    <div class="form-group has-feedback col-md-6">
        <!--Seleciona o tipo do quarto-->
        <label for="tipoQuarto">Tipo do Quarto:</label>
        <select class="form-control" name="TipoQuarto" id="TipoQuarto" required>
            <option></option>
            <option value="1">Single Room (Solteiro)</option>
            <option value="2">Twin Room (Solteiro-2)</option>
            <option value="3">Twin Room (Solteiro-3)</option>
            <option value="4">Twin Room (Solteiro-4)</option>
            <option value="5">Double Room (Casal)</option>
            <option value="6">Double + Single Room (Casal + 1)</option>
            <option value="7">Double + Twin Room (Casal + 2)</option>
        </select>
        <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
    </div>
    <!--Seleciona o número do Quarto-->
    <div class="form-group has-feedback col-md-4">
            <label for="numQuarto">Nº do Quarto:</label>
            <input class="form-control uppercase" type="number" id="numQuarto" name="numQuarto" min="1" required />
        <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
        </div>
        
        <!--Seleciona o andar do Quarto-->
    <div class="form-group has-feedback col-md-4">
        <label for="numAndar">Nº do Andar:</label>
        <select class="form-control uppercase" name="numAndar" id="numAndar" required>
            <option></option>
            <option>1</option>
            <option>2</option>
            <option>3</option>
        </select>
        <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
    </div>

    <div class="form-group has-feedback col-md-4">
        <label for="statusQuarto">Status do Quarto:</label>
        <input class="form-control uppercase" value="Livre" hidden disabled name="statusQuarto" id="statusQuarto" />
    </div>
       
            <button type="submit" class="btn btn-success" name="btnSalvarQuarto" id="btnSalvarQuarto">Salvar Quarto</button>
            <button type="reset" class="btn btn-warning">Limpar Formulário</button>
       
    
</form>
