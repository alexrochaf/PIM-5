@{
    Page.Title = "TheHost - Inicio";
    Layout = "../_Layout.cshtml";
    Page.Home = "active";

    var conexao = WebMatrix.Data.Database.Open("DB");

    var quartos = conexao.Query("select *, Descricao from QUARTO q inner join TipoQuarto t on t.id = q.tipo_id");

    conexao.Close();

}
<div class="row">
    @{
        foreach (var item in quartos)
        {
            if (item.estatus == 0)
            {
                <div class="col-md-4">
                    <div class="panel panel-success">
                        <div class="panel-heading">@item.Estatus</div>
                        <div class="panel-body">
                            <i class="fa fa-fw fa-star"></i> @item.Descricao
                        </div>
                    </div>
                </div>
            }
        }
    }
</div>